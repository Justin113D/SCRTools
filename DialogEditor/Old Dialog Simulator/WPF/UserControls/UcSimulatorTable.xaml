<UserControl 
    x:Class="SCR.Tools.Dialog.Simulator.WPF.UserControls.UcSimulatorTable"
    x:ClassModifier="internal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:SCR.Tools.Dialog.Simulator.WPF.UserControls"
    xmlns:wpf="clr-namespace:SCR.Tools.Dialog.Simulator.WPF"
    xmlns:vm="clr-namespace:SCR.Tools.Dialog.Simulator.Viewmodeling"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="200"
    d:DataContext="{x:Static wpf:DesignDataFactory.Simulator}">

    <UserControl.Resources>
        <wpf:OutputNumConverter x:Key="OutputNumToColor"/>
    </UserControl.Resources>
    
    <ScrollViewer
        VerticalScrollBarVisibility="Auto"
        HorizontalScrollBarVisibility="Disabled"
        Background="{DynamicResource BG1}">

        <StackPanel Margin="8 0">

            <TextBlock
                HorizontalAlignment="Center"
                Margin="0 5"
                Text="Nodes"
                FontWeight="Bold"/>
            
            <ListBox 
                ItemsSource="{Binding Nodes}" 
                SelectedItem="{Binding ActiveNode, Mode=OneWay}"
                SelectionChanged="ListBox_SelectionChanged"
                Background="Transparent" 
                BorderThickness="0" 
                HorizontalContentAlignment="Stretch"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                Template="{DynamicResource BasicListControl}">

                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:VmNode}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock 
                                Grid.Column="0" 
                                Text="{Binding Name}" 
                                TextTrimming="CharacterEllipsis" 
                                TextWrapping="NoWrap"/>

                            <TextBlock 
                                Grid.Column="1" 
                                Text="{Binding OutInfo}"
                                Margin="5 0"/>

                            <Border
                                Grid.Column="2"
                                Background="{Binding OutputNumber, Converter={StaticResource OutputNumToColor}}"
                                CornerRadius="3"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </ListBox.ItemContainerStyle>

            </ListBox>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
