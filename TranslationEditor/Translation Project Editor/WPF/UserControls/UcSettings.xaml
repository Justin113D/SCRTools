<wpfc:SettingsControl
    x:Class="SCR.Tools.TranslationEditor.ProjectEditor.WPF.UserControls.UcSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:wpfc="clr-namespace:SCR.Tools.WPF.Controls;assembly=SCR.Tools.WPF"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">
    
    <!-- Default format filepath-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Text="Default Format File"/>
        <TextBox x:Name="DefaultPathTextBox" Grid.Column="1" Padding="2" Background="{DynamicResource BG2}" TextWrapping="NoWrap"/>
        <Button Grid.Column="2" Click="DefaultPathDialog" Margin="5,0,0,0">
            <Button.Style>
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </Button.Style>

            <Image Source="pack://application:,,,/SCR.Tools.WPF;component/Icons/OpenFolder.png" Height="16" Width="16"/>
        </Button>
    </Grid>
</wpfc:SettingsControl>
